<%- include('../partials/head', {title: 'Page Title'}) %>
<%- include('../partials/headerSub') %>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .cart-container {
            max-width: 800px;
            margin: 50px auto;
        }
        .card {
            margin-bottom: 20px;
        }
        .card img {
            width: 100px;
            height: auto;
        }
    </style>

<div class="cart-container">
    <h2 class="text-center mb-4">Your Cart</h2>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <img src="https://via.placeholder.com/200" class="card-img-top" alt="Tomato">
                </div>
                <div class="col-md-6">
                    <h5 class="card-title">Tomato</h5>
                    <p class="card-text">Price: $2.99</p>
                    <p class="card-text">Quantity: 2</p>
                </div>
                <div class="col-md-3">
                    <p class="card-text">Total: $5.98</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <img src="https://via.placeholder.com/200" class="card-img-top" alt="Carrot">
                </div>
                <div class="col-md-6">
                    <h5 class="card-title">Carrot</h5>
                    <p class="card-text">Price: $1.49</p>
                    <p class="card-text">Quantity: 3</p>
                </div>
                <div class="col-md-3">
                    <p class="card-text">Total: $4.47</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Add more items here as needed -->

    <div class="text-end">
        <h5>Total Bill: $10.45</h5>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#orderModal">Place Order</button>
    </div>

</div>

<!-- Order Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderModalLabel">Order Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Your order has been placed successfully! It will be delivered to your address on cash on delivery.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
