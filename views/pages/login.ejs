<%- include('../partials/head', {title: 'Page Title' }) %> <%- include('../partials/headerSub') %>
		<style>
			* {}

			body {
				/* background-color: #f8f9fa; */
				font-family: Arial, sans-serif;
				background: linear-gradient(to bottom, #d2b48c, #ceffc7);

			}

			.login-container {
				max-width: 473px;
				margin: 100px auto;
				border: 2px solid rgb(0, 0, 0);
				padding: 31px;
				border-radius: 5%;

			}

			.btn-primary {
				background-color: #76a72e;
				border-color: #76a72e;
				padding: 10px 20px;
				font-size: 18px;
				border-radius: 5px;

				&:active {
					background-color: #5c7f2c;
					border-color: #5c7f2c;
					/* box-shadow: pink; */
					/* Remove default shadow */
				}

				&:hover {
					background-color: #5c7f2c;
					border-color: #5c7f2c;
				}

				&:focus {
					outline: none;
					/* Remove focus outline */
					background-color: #5c7f2c;
					border: none;
					box-shadow: none;
					/* Reset background color */
				}
			}
		</style>
		<% if (errorMessage) { %>
			<div class="alert alert-danger" role="alert">
				<%= errorMessage %>
			</div>
			<% } %>

				<!-- Success message -->
				<% if(successMessage) { %>
					<div class="alert alert-success" role="alert">
						<%= successMessage %>
					</div>
					<% } %>

						<div class="login-container">
							<h2 class="text-center mb-4">Login</h2>
							<form action="/login" method="POST">
								<div class="mb-3">
									<label for="email" class="form-label">Email address</label>
									<input type="email" class="form-control" id="email" name="email"
										aria-describedby="emailHelp" required />
								</div>
								<div class="mb-3">
									<label for="password" class="form-label">Password</label>
									<input type="password" class="form-control" id="password" name="password"
										required />
									<!-- Add name attribute -->
								</div>
								<div class="text-center"> <!-- Centering div -->
									<button type="submit" class="btn btn-primary btn-block">Login</button>
								</div>
								<!-- <button type="submit" class="btn btn-primary btn-block text-center">Login</button> -->
							</form>	
							<p class="text-center mt-3">
								Don't have an account? <a href="/signup">Sign Up</a>
							</p>
						</div>

						<% if(successMessage) { %>
							<script>
								// Redirect to main page after successful login
								setTimeout(function () {
									window.location.href = "/";
								}, 3000); // Redirect after 3 seconds
							</script>
							<% } %>

								<script
									src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
								<script
									src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
									
									<%- include('../partials/footer') %>
